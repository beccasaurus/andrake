<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:background="#000">
	<RelativeLayout android:orientation="horizontal"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:background="#000" 
	    android:animationCache="true" 
	    android:alwaysDrawnWithCache="true" 
	    android:drawingCacheQuality="high">
	    <ImageButton android:id="@+id/btnDelete" 
			android:layout_alignParentRight="true" 
	    	android:src="@drawable/delete"
	    	android:textStyle="bold"
	    	android:clickable="true"
	    	android:text="Delete" 
	    	android:textColorHighlight="#eee"
	    	android:editable="false" 
	    	android:textSize="12px" 
			android:layout_height="12pt" 
			android:layout_marginTop="4px" 
			android:paddingTop="2px" 
			android:paddingBottom="10px" 
			android:layout_marginRight="2px" 
			android:background="#000" 
			android:layout_width="14pt" 
			android:paddingLeft="9px"/>
		<TextView android:id="@+id/txtName" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:clickable="true"
	    	android:text="name" 
	    	android:textColorHighlight="#eee"
	    	android:editable="false" 
	    	android:layout_toRightOf="@+id/imgAvatar" 
			android:paddingTop="5px" 
			android:textStyle="bold" 
			android:textColor="#1D6EAD" 
			android:paddingLeft="12px" 
			android:layout_alignParentTop="true"/>
	    <TextView android:id="@+id/txtTime" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="time"  
	    	android:layout_toRightOf="@+id/txtName" 
	    	android:textSize="12px" 
	    	android:textStyle="italic" 
	    	android:typeface="normal" 
	    	android:layout_marginRight="5px" 
	    	android:editable="false" 
	    	android:paddingLeft="3px" 
	    	android:layout_marginLeft="3px" 
	    	android:textColorHighlight="#ccc" 
	    	android:textColor="#ccc"  
	    	android:layout_alignParentTop="true" 
	    	android:layout_marginTop="8px"/>
	    <ImageView android:id="@+id/imgFav"  
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/icon_star_empty"
			android:layout_marginRight="5px"
	    	android:clickable="true" 
	    	android:layout_toRightOf="@+id/txtTime" 
	    	android:layout_marginLeft="2px" 
	    	android:layout_marginBottom="1px" 
	    	android:layout_alignParentTop="true" 
	    	android:layout_marginTop="5px"/>
		<ImageView android:id="@+id/imgAvatar"  
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:clickable="true" 
			android:layout_toLeftOf="@+id/txtMessage" 
			android:paddingLeft="3px" 
			android:paddingBottom="3px" 
			android:paddingTop="9px"
			android:layout_alignParentLeft="true" 
			android:src="@drawable/icon" 
			android:layout_alignTop="@+id/txtName"/>
		<TextView android:id="@+id/txtMessage" 
	    	android:layout_width="wrap_content"
	    	android:text="message" 
	    	android:autoLink="all" 
	    	android:textStyle="normal" 
	    	android:editable="false" 
	    	android:longClickable="false" 
	    	android:linksClickable="true" 
	    	android:layout_below="@+id/txtName" 
	    	android:layout_toRightOf="@+id/imgAvatar" 
	    	android:typeface="sans" 
	    	android:textSize="14px" 
	    	android:textColor="#ccc" 
	    	android:textColorHighlight="#ccc" 
	    	android:layout_height="wrap_content" 
	    	android:selectAllOnFocus="false" 
	    	android:paddingBottom="3px" 
	    	android:cursorVisible="true" 
	    	android:clickable="true" 
	    	android:focusable="true" 
	    	android:freezesText="true" 
	    	android:saveEnabled="true" 
	    	android:background="@drawable/textbub2" 
	    	android:layout_marginLeft="4px" 
	    	android:paddingRight="4px" 
	    	android:paddingLeft="12px" 
	    	android:paddingTop="6px" 
	    	android:textColorLink="#1D6EAD"/>
		<TextView android:id="@+id/txtSource" 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="source"  
	    	android:textSize="10px"
	    	android:typeface="normal" 
	    	android:layout_marginRight="5px" 
	    	android:editable="false" 
	    	android:paddingLeft="3px" 
	    	android:selectAllOnFocus="false" 
	    	android:longClickable="false" 
	    	android:clickable="false" 
	    	android:cursorVisible="false" 
	    	android:textColorHint="#ccc" 
	    	android:textColorHighlight="#ccc" 
	    	android:textColor="#ccc" 
	    	android:layout_below="@+id/txtMessage" 
	    	android:layout_alignLeft="@+id/txtMessage" 
	    	android:layout_marginLeft="15px"/>
		<LinearLayout android:orientation="horizontal"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:background="#000" 
		    android:layout_below="@+id/txtSource">
			<Button android:id="@+id/btnReply" 
				android:text="@string/btnReply"
				android:textSize="12px" 
				android:layout_height="12pt" 
				android:layout_marginTop="4px" 
				android:layout_width="25pt" 
				android:paddingTop="2px" 
				android:paddingBottom="10px" 
				android:layout_marginRight="2px" 
				android:layout_alignParentBottom="true" 
				android:layout_toLeftOf="@+id/btnDirect"/>
			<Button android:id="@+id/btnDirect" 
				android:text="@string/btnDirect"
				android:layout_toLeftOf="@+id/btnReply" 
				android:textSize="12px" 
				android:paddingBottom="10px" 
				android:paddingTop="2px" 
				android:layout_height="12pt" 
				android:layout_width="27pt" 
				android:layout_marginTop="4px" 
				android:layout_alignParentBottom="true"/>
			<Button android:id="@+id/btnRT" 
				android:text="@string/btnRT"
				android:layout_toRightOf="@id/btnDirect" 
				android:textSize="12px" 
				android:paddingBottom="10px" 
				android:paddingTop="2px" 
				android:layout_height="12pt" 
				android:layout_width="30pt" 
				android:layout_marginTop="4px" 
				android:layout_alignParentRight="true"/>
	    </LinearLayout>
	</RelativeLayout>
</LinearLayout>


