<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:fitsSystemWindows="true" 
	android:longClickable="true" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView android:id="@+id/txtLinkDesc" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="@string/txtLinkDesc" 
			android:layout_margin="3px" android:textSize="12px"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView android:id="@+id/txtLink" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="@string/txtLink" 
			android:layout_margin="3px"/>
		<EditText android:id="@+id/etLinkToConvert"
			android:layout_height="wrap_content" 
			android:scrollHorizontally="true" 
			android:layout_margin="3px" 
			android:singleLine="true"
			android:layout_width="fill_parent"/>
	</LinearLayout>
	<RelativeLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		 <Button android:id="@+id/btnBookmark" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="@string/btnBookmarks" 
			android:layout_alignParentLeft="true" 
			android:width="75pt"/> -->
		<Button android:id="@+id/btnSend" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="@string/btnSend" 
			android:layout_alignParentRight="true" 
			android:width="30pt"/> 
		<Button android:id="@+id/btnCancel" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="@string/strCancel" 
			android:layout_toLeftOf="@+id/btnSend" 
			android:layout_below="@+id/etMessage" 
			android:width="32pt"/>
	</RelativeLayout>
</LinearLayout>
